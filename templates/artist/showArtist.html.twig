{% extends 'base.html.twig' %}

    {% block body %}
        <h3>{{ artist.nameArtist }}</h3>
        <br>
        <p>{{ artist.bioArtiste }}</p>
        <br>
        {% for oeuvre in artist.oeuvres %}
            <p>{{ oeuvre.nameArt}}</p>
        {% endfor %}
        {% if is_granted('ROLE_MODERATEUR') %}
            <a href="{{ path('app_editArtist', {slug: artist.slug}) }}" class="btn btn-outline-secondary">Modifier l'article</a>
            <a href="{{ path('app_deleteArtist', {slug: artist.slug}) }}" class="btn btn-outline-secondary">Supprimer l'article</a>
        {% endif %}

    {% endblock %}

